{
  "name": "phaestus",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:full": "pnpm build && pnpm pages:dev",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "wrangler d1 migrations apply phaestus --local",
    "db:migrate:remote": "wrangler d1 migrations apply phaestus --remote",
    "db:reset": "rm -rf .wrangler && pnpm db:migrate && pnpm db:seed:local",
    "db:seed:local": "for f in migrations/*.sql; do sqlite3 .wrangler/state/v3/d1/miniflare-D1DatabaseObject/*.sqlite < \"$f\" 2>/dev/null || true; done",
    "db:studio": "wrangler d1 execute phaestus --local --command 'SELECT 1'",
    "pages:dev": "wrangler pages dev dist --d1=DB --r2=STORAGE",
    "deploy": "pnpm build && wrangler pages deploy dist --project-name=phaestus"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.16",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "kicadts": "^0.0.23",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.11.0",
    "zod": "^4.3.4",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  }
}
